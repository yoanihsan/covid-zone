<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#FFFFFF</item>
    </style>

    <style name="appTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="SearchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/box_serach_country</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="SequenceButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp2</item>
        <item name="android:layout_marginEnd">@dimen/dp2</item>
        <item name="android:layout_marginTop">@dimen/dp2</item>
        <item name="android:layout_marginBottom">@dimen/dp2</item>
        <item name="android:background">@drawable/ic_sequence</item>
        <item name="android:layout_weight">5</item>
    </style>

    <style name="LinearSummary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextSummaryItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
    </style>

    <style name="TextSummaryItemCount">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginBottom">@dimen/dp8</item>
    </style>

    <style name="SearchBarLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/txt_title</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="GlobalSummaryLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/lay_search</item>
        <item name="android:layout_marginStart">@dimen/dp8</item>
        <item name="android:layout_marginEnd">@dimen/dp8</item>
        <item name="android:background">@drawable/bg_purple</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CountrySummaryHeaderTitleLinear">
        <item name="android:layout_marginTop">@dimen/dp8</item>
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_below">@id/lay_globe</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BoldText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="StandardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ListCountryLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:layout_margin">@dimen/dp8</item>
        <item name="android:background">@drawable/bg_header_gray</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CardViewBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/dp8</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImgFlag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/dp8</item>
    </style>

    <style name="BoldTextLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextListCountryName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextListCountryTotal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
